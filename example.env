# Supabase Configuration (for authentication only)
# Get these values from your Supabase project dashboard
# https://supabase.com/dashboard/project/[your-project-id]/settings/api

# Supabase Project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Anon Key (Public Key)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase Service Role Key (Optional - for server-side operations)
# Only use this if you need server-side operations
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# OAuth Providers (Configure these in Supabase Dashboard > Authentication > Providers)
# Google OAuth
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id

# Discord OAuth  
NEXT_PUBLIC_DISCORD_CLIENT_ID=your-discord-client-id

# Turso Database Configuration (for data storage)
# Get these values from your Turso dashboard
# https://turso.tech/dashboard

# Turso Database URL
TURSO_DATABASE_URL=libsql://your-database-name.turso.io

# Turso Auth Token
TURSO_AUTH_TOKEN=your-turso-auth-token

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_VERCEL_URL=your-vercel-app-url.vercel.app

# SMTP Email Configuration (for sending emails)
# Configure these to enable email notifications

# SMTP Server Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false

# SMTP Authentication
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Email Settings
FROM_EMAIL=noreply@stataku.com
FROM_NAME=Stataku Team

# Common SMTP Providers:
# Gmail: smtp.gmail.com:587 (use app password, not regular password)
# Outlook: smtp-mail.outlook.com:587
# SendGrid: smtp.sendgrid.net:587
# Mailgun: smtp.mailgun.org:587